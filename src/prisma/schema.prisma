datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Webhook {
  id           Int      @id @default(autoincrement())
  service_key  String   @unique
  secret_token String
  service      String
  bot          Json?
  room         Json
  setting      Json?
  created_at   DateTime @default(now())
  created_by   Int?
  updated_at   DateTime @updatedAt
  User         User?    @relation(fields: [created_by], references: [id])

  @@map("webhook")
}

model User {
  id         Int       @id @default(autoincrement())
  email      String    @unique
  password   String
  fullname   String?
  created_at DateTime  @default(now())
  updated_at DateTime  @updatedAt
  role       Role
  Webhook    Webhook[]

  @@map("user")
}

enum Role {
  ADMIN
  MANAGER
  MEMBER
}
